<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:id="@+id/viewProfile1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_profile">

        <RelativeLayout
            android:id="@+id/imageProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_border">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/circle"
                android:src="@drawable/ic_base_line_person_24" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="NGUYỄN HẢI LY"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:src="@drawable/icons_logout" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlNotifi"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_image"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/imagePayment"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_notification" />

                    <TextView
                        android:id="@+id/tvPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagePayment"
                        android:layout_centerHorizontal="true"
                        android:text="Notification"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPayment"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/rlNotifi"
                    android:background="@drawable/bg_image"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/imageNotification"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_payment" />

                    <TextView
                        android:id="@+id/tvNotifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageNotification"
                        android:layout_centerHorizontal="true"
                        android:text="Payment"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSetting"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/rlPayment"
                    android:background="@drawable/bg_image"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/imageSetting"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_setting" />

                    <TextView
                        android:id="@+id/tvSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageSetting"
                        android:layout_centerHorizontal="true"
                        android:text="EditProfile"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/viewProfile2"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_view">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvusername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="30dp"
                            android:paddingBottom="8dp"
                            android:text="UserName"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawableStart="@drawable/icons_un"
                            android:drawablePadding="10dp"
                            android:text="NguyenHaiLy"
                            android:textColor="#000"
                            android:textSize="22sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue" />
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="30dp"
                            android:paddingBottom="8dp"
                            android:text="Email"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawableStart="@drawable/icons_mail"
                            android:drawablePadding="10dp"
                            android:text="nguyenhaily1014@gmail.com"
                            android:textColor="#000"
                            android:textSize="22sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue" />
                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="30dp"
                            android:paddingBottom="8dp"
                            android:text="Phone"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawableStart="@drawable/icons_phone"
                            android:drawablePadding="10dp"
                            android:text="035357899"
                            android:textColor="#000"
                            android:textSize="22sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue" />
                        <TextView
                            android:id="@+id/tvPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="30dp"
                            android:paddingBottom="8dp"
                            android:text="Password"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawableStart="@drawable/icons_passwordshow"
                            android:drawablePadding="10dp"
                            android:text="2050531200231"
                            android:textColor="#000"
                            android:textSize="22sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>